[
{{- $first := true -}}
{{- range .Site.AllPages -}}
  {{- if and (eq .Section "experience") (eq .Type "knowledge") -}}
    {{- if not $first -}},{{- end -}}
    {
      "title": {{ .Title | jsonify }},
      "section": {{ .Section | jsonify }},
      "type": {{ .Type | jsonify }},
      "permalink": {{ .Permalink | jsonify }},
      "content": {{ .Plain | jsonify }},
      "date": {{ .Date.Format "2006-01-02" | jsonify }},
      "isSection": {{ .IsSection }}
    }
    {{- $first = false -}}
  {{- end -}}
{{- end -}}
]
